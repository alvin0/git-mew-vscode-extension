{
  "name": "git-mew",
  "displayName": "Git Mew",
  "description": "Your AI kitty for Git chaos - Generate intelligent commit messages using AI",
  "version": "0.0.3",
  "icon": "resources/images/logo.png",
  "publisher": "GitMew",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "SCM Providers",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "git",
    "commit",
    "ai",
    "llm",
    "openai",
    "claude",
    "gemini",
    "ollama",
    "commit message"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/git-mew/git-mew"
  },
  "bugs": {
    "url": "https://github.com/git-mew/git-mew/issues"
  },
  "homepage": "https://github.com/git-mew/git-mew#readme",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-mew.generate-commit",
        "title": "git-mew: Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "git-mew.cancel-generate",
        "title": "git-mew: Cancel Generation",
        "icon": "$(debug-pause)"
      },
      {
        "command": "git-mew.setupModel",
        "title": "git-mew: Setup Model"
      },
      {
        "command": "git-mew.review-merge",
        "title": "git-mew: Review Merge",
        "icon": "$(git-merge)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "git-mew.generate-commit",
          "when": "scmProvider == git && !git-mew.isGenerating",
          "group": "navigation"
        },
        {
          "command": "git-mew.cancel-generate",
          "when": "scmProvider == git && git-mew.isGenerating",
          "group": "navigation"
        },
        {
          "command": "git-mew.review-merge",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "git-mew",
      "properties": {
        "git-mew.llmProvider": {
          "type": "string",
          "enum": ["openai", "claude", "gemini", "ollama"],
          "enumDescriptions": [
            "OpenAI GPT models",
            "Anthropic Claude models",
            "Google Gemini models",
            "Ollama local models"
          ],
          "description": "Select the LLM provider to use for generating commit messages"
        },
        "git-mew.llmModel.openai": {
          "type": "string",
          "description": "OpenAI model to use"
        },
        "git-mew.llmModel.claude": {
          "type": "string",
          "description": "Claude model to use"
        },
        "git-mew.llmModel.gemini": {
          "type": "string",
          "description": "Gemini model to use"
        },
        "git-mew.llmModel.ollama": {
          "type": "string",
          "description": "Ollama model to use"
        },
        "git-mew.reviewMerge.provider": {
          "type": "string",
          "enum": ["openai", "claude", "gemini", "ollama"],
          "description": "Last used LLM provider for Review Merge (separate from commit generation)"
        },
        "git-mew.reviewMerge.model": {
          "type": "string",
          "description": "Last used model for Review Merge (separate from commit generation)"
        },
        "git-mew.reviewMerge.language": {
          "type": "string",
          "default": "Vietnamese",
          "enum": ["English", "Vietnamese", "Japanese", "Korean", "Chinese", "French", "German", "Spanish"],
          "description": "Last used response language for Review Merge"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
